@model BaseDeConhecimento.Dtos.AspectoDTO
@{
    ViewBag.Title = "Cadastrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastrar</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Salvar", "Aspecto"))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>AspectoDTO</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.codigoIdentificacao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.codigoIdentificacao)
            @Html.ValidationMessageFor(model => model.codigoIdentificacao)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.tipo)
        </div>
        <div class="editor-label">
            <select id="tipo" name="tipo">
                <option value="0">Ambientais</option>
                <option value="1">Técnicos</option>
            </select>
           
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.descricao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.descricao)
            @Html.ValidationMessageFor(model => model.descricao)
        </div>
         <div class="editor-label">
            @Html.LabelFor(model => model.peso)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.peso)
            @Html.ValidationMessageFor(model => model.peso)
        </div>

        <p>
            <input type="submit" value="Salvar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>
