@model BaseDeConhecimento.Dtos.ProjetoDTO

@{
    ViewBag.Title = "Cadastrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastrar</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Views/Projeto.js")" type="text/javascript"></script>


@using (Html.BeginForm("Salvar", "Projeto")) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Projeto</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.titulo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.titulo)
            @Html.ValidationMessageFor(model => model.titulo)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.descricao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.descricao)
            @Html.ValidationMessageFor(model => model.descricao)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.dataPrevistaInicio)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.dataPrevistaInicio)
            @Html.ValidationMessageFor(model => model.dataPrevistaInicio)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.dataPrevistaTermino)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.dataPrevistaTermino)
            @Html.ValidationMessageFor(model => model.dataPrevistaTermino)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.custoPrevisto)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.custoPrevisto)
            @Html.ValidationMessageFor(model => model.custoPrevisto)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.custoReal)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.custoReal)
            @Html.ValidationMessageFor(model => model.custoReal)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.dataInicio)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.dataInicio)
            @Html.ValidationMessageFor(model => model.dataInicio)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.dataFim)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.dataFim)
            @Html.ValidationMessageFor(model => model.dataFim)
        </div>

        <p>
            <input type="submit" value="Salvar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Listar todos", "Listar")
</div>
